@model MakingItPretty.Models.CandidateViewModel

<div class="row">
    <div class="large-12 columns">
        <h1>Candidate Details</h1>
    </div>
</div>

<div class="row">
    <div class="large-12">
        <div class="panel">
            @using (Html.BeginForm("Update", "Candidate", FormMethod.Post))
            {
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 form-group">
                    @Html.LabelFor(x => x.FirstName, new {@class = "col-md-5 control-label"})
                    @Html.DisplayFor(x => x.FirstName, new {@class = "form-control"})
                </div>

                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 form-group">
                    @Html.LabelFor(x => x.LastName, new {@class = "col-md-5 control-label"})
                    @Html.DisplayFor(x => x.LastName, new {@class = "form-control"})
                </div>

                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 form-group">
                    @Html.LabelFor(x => x.Email, new {@class = "col-md-5 control-label"})
                    @Html.DisplayFor(x => x.Email, new {@class = "form-control"})
                </div>
            }
        </div>
    </div>
</div>


<div class="row" id="panel" data-toggler>
    <h2> Rendered via...</h2>
    <div class="large-6 columns">
        <div class="panel">
            <h3>
                Html.Action

            </h3>
            <hr/>
            @Html.Action("CandidateAdress", new {id = 1})
            <em> Returns a string, useful for caching response</em>
        </div>
    </div>
    <div class="large-6 columns">
        <div class="panel">
            <h3>Html.RenderAction</h3>
            <hr/>
            @{
                Html.RenderAction("CandidateAdress", new {id = 1});
            }
            <em>Renders directly to the view/response which is faster especially if you have large amounts of HTML</em>
        </div>
    </div>
</div>

<div class="row">
    <h2> Rendered via</h2>
    <div class="large-6 columns">
        <h3>Html.RenderPartial</h3>
        <hr/>
        @{
            Html.RenderPartial("_LastApplication", Model.LastApplication);
        }
        <em>
            <ul>
                <li>
                    Useful for displaying data already in the model.
                </li>
                <li>
                    Renders directly to the view/response which is faster especially if you have large amounts of HTML
                </li>
            </ul>

        </em>
    </div>

    <div class="large-6 columns">
        <h3>Html.Partial</h3>
        <hr/>
        @{
            var html = Html.Partial("_LastApplication", Model.LastApplication);
        }
        @html
        <em>
            <ul>
                <li>
                    Useful for displaying data already in the model.
                </li>
            </ul>
        </em>
    </div>
</div>


@section Footer
{
    <div class="row">
        <div class="large-12">
            <div class="">
                <span class="success label">
                    COPYRIGHT 2016 - ENTELECT - .NET FORUM
                </span>
            </div>
        </div>

    </div>
    
   
}
