@model MakingItPretty.Models.CandidateViewModel


<div class="row">
    <div class="large-12">
        <h1>Candidate Listing</h1>
    </div>
</div>
<div class="row">
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Job Title</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var candidate in Model.Candidates)
            {
                <tr>
                    <td>@candidate.FirstName</td>
                    <td>@candidate.LastName</td>
                    <td>@candidate.Email</td>
                    <td>@candidate.JobTitle</td>
                    <td>@Html.ActionLink("Details","Detail", new {id=1})</td>
                </tr>
            }
        </tbody>
    </table>
    <div id="candidateDetail">
    </div>
</div>
<script>
    $(document).ready(function () {
        $.ajax({
            method: "GET",
            url: "/candidate/detail/1",
            success(data) {
                $("#candidateDetail").html(data);
            }
        });
    });
</script>

@section Footer
{
   <div class="row">
    <div class="large-12">
        <div class="">
            <span class="info label">
                COPYRIGHT 2016 - ENTELECT - .NET FORUM
            </span>
        </div>
    </div>

</div>
}
