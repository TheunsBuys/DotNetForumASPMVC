@model SimpleSample.Models.CandidateViewModel

<div class="row">
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Job Title</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var candidate in Model.Candidates)
            {
                <tr>
                    <td>@candidate.FirstName</td>
                    <td>@candidate.LastName</td>
                    <td>@candidate.Email</td>
                    <td>@candidate.JobTitle</td>
                </tr>
            }
        </tbody>
    </table>
    <div style="margin-top:25px; border:1px;">
        <div id="candidateDetail">
        </div>
    </div>
    
</div>
<script>
    $(document).ready(function () {
        $.ajax({
            method: "GET",
            url: "/candidate/detail/1",
            success(data) {
                $("#candidateDetail").html(data);
            }
        });
    });
</script>